<?xml version="1.0" encoding="utf-8"?>
<layer-list xmlns:android="http://schemas.android.com/apk/res/android">
    <!-- Background Layer -->
    <item>
        <shape
            android:shape="rectangle">
            <solid android:color="#E0E0E0"/> <!-- Light gray background -->
            <corners android:radius="0dp"/> <!-- No rounded corners -->
        </shape>
    </item>

    <!-- Pixelated Foreground Layer -->
    <item android:right="2px" android:left="2px" android:top="2px" android:bottom="2px">
        <clip>
            <!-- The clip ensures the progressDrawable scales with progress -->
            <shape
                android:shape="rectangle">
                <solid android:color="#FF8C00"/> <!-- Pixel block color (orange) -->
                <corners android:radius="0dp"/> <!-- No rounded corners -->

                <!-- You can adjust this section to simulate pixelation if necessary -->
            </shape>
        </clip>
    </item>
</layer-list>